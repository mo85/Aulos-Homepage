<h1>Listing projects</h1>

<table class="default">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Year</th>
		<th>Action</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
		<td><%= link_to project.title, project %></td>
		<td><%= project.description %></td>
		<td><%= project.year %></td>		
    <td><%= link_to 'Edit', edit_project_path(project) %><br />
				<%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path %>
