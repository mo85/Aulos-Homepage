<h1>Aulos Projekt Archiv</h1>

<table class="default">
  <tr>
    <th width="20%">Projekt</th>
    <th width="60%">Beschreibung</th>
    <th width="10%">Jahr</th>
		<th width="10%">&nbsp;</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
		<td><%= link_to project.title, project %></td>
		<td><%= project.description %></td>
		<td><%= project.year %></td>		
    <td>
			<% if permitted_to? :manage, :projects %>
				<%= link_to image_tag("icons/pencil.png"), edit_project_path(project) %>
				<%= link_to image_tag("icons/delete.png"), project, :confirm => 'Are you sure?', :method => :delete %>
			<% else %>
				&nbsp;
			<% end %>
			</td>
  </tr>
<% end %>
</table>


<% content_for :submenu do %>
	
	<% if permitted_to? :manage, :projects %>
		<li><%= link_to 'Neues Projekt erstellen', new_project_path %></li>
	<% end %>
<% end %>
