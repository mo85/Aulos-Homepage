<h1>Listing plays</h1>

<table class="default">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Action</th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= link_to play.title, play %></td>
    <td><%= play.year %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %><br />
				<%= link_to 'Destroy', play, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Play', new_play_path %>
