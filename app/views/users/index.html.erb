<h1>Benutzer Accounts</h1>

<table class="default">
  <tr>
    <th>Name</th>
		<th>Administrator?</th>
    <th>&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
		<td><%= user.is_admin %></td>
    <td>
			<% if permitted_to? :manage, :users %>
				<%= link_to image_tag("icons/pencil.png"), edit_user_path(user) %>
    		<%= link_to image_tag("icons/delete.png"), user, :confirm => 'Soll dieser Benutzer wirklich gelÃ¶scht werden?', :method => :delete %>
			<% end %>
		</td>
  </tr>
<% end %>
</table>

<% content_for :submenu do %>
	<% if permitted_to? :manage, :users %>
		<li><%= link_to 'Benutzer erstellen', new_user_path %></li>
	<% end %>
<% end %>
