<h1>Listing instruments</h1>

<table class="default">
  <tr>
    <th>Name</th>
    <th>Family</th>
    <th></th>
  </tr>

<% @instruments.each do |instrument| %>
  <tr>
    <td><%= instrument.name %></td>
		<td><%= instrument.family_to_s %></td>
    <td><%= link_to 'Show', instrument %><br />
    <%= link_to 'Edit', edit_instrument_path(instrument) %><br />
    <%= link_to 'Destroy', instrument, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

